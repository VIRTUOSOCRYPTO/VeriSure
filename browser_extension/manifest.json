{
  "manifest_version": 3,
  "name": "VeriSure - AI Scam Detector",
  "version": "1.0.0",
  "description": "Instantly verify content authenticity and detect scams with AI-powered forensic analysis",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "VeriSure - Analyze Content"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "options_page": "options/options.html",
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "popup/results.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
